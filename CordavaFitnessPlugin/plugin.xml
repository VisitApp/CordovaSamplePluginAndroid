<?xml version='1.0' encoding='utf-8'?>
<plugin xmlns:android="http://schemas.android.com/apk/res/android"
    id="info.android.plugin.fitness"
    version="1.0.0"
    xmlns="http://apache.org/cordova/ns/plugins/1.0">

    <name>CordavaFitnessPlugin</name>

    <js-module
        name="CordavaFitnessPlugin"
        src="www/CordavaFitnessPlugin.js">

        <clobbers target="cordova.plugins.CordavaFitnessPlugin" />
    </js-module>

    <platform name="android">

        <config-file
            parent="/*"
            target="res/xml/config.xml">

            <feature name="CordavaFitnessPlugin">

                <param
                    name="android-package"
                    value="info.android.plugin.CordavaFitnessPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <activity android:label="New Activity" android:name="info.android.activity.NewActivity" android:theme="@style/Theme.AppTheme"></activity>
        </config-file>

        <config-file
            parent="/*"
            target="AndroidManifest.xml"></config-file>

        <source-file
            src="src/android/CordavaFitnessPlugin.java"
            target-dir="src/info/android/plugin" />


        <source-file src="src/android/NewActivity.java" target-dir="src/info/android/activity" />
        <source-file src="src/android/activity_new.xml" target-dir="res/layout"/>
    </platform>
</plugin>